<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.Borderless" parent="Widget.App.Button.Outlined">
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.App.Button.Outlined"
            parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.App.Toolbar.ColoredBackButton" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?colorAccent</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color_hint</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_accent</item>
    </style>
</resources>