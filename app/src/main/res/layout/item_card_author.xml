<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".AboutActivity">

    <data>

        <!-- TODO Add data binding vars. -->

        <import type="android.view.View" alias="View"/>

    </data>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                    android:id="@+id/baseline_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/baseline"/>

            <android.support.constraint.Guideline
                    android:id="@+id/baseline_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/baseline"/>

            <android.support.constraint.Guideline
                    android:id="@+id/baseline_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/baseline"/>

            <android.support.constraint.Guideline
                    android:id="@+id/baseline_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="@dimen/baseline"/>

            <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/size_avatar"
                    android:layout_height="@dimen/size_avatar"
                    android:src="@drawable/art_profile_crazy_marvin"
                    app:layout_constraintTop_toTopOf="@id/baseline_top"
                    app:layout_constraintBottom_toBottomOf="@id/barrier_below_information"
                    app:layout_constraintStart_toStartOf="@id/baseline_start"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginStart="@dimen/baseline"
                    app:layout_constraintTop_toTopOf="@id/baseline_top"
                    app:layout_constraintBottom_toTopOf="@id/role"
                    app:layout_constraintStart_toEndOf="@id/avatar"
                    app:layout_constraintEnd_toEndOf="@id/baseline_end"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="@tools:sample/full_names"
                    style="@style/TextAppearance.AppCompat.Headline"/>

            <TextView
                    android:id="@+id/role"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textAllCaps="true"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginStart="@dimen/baseline"
                    app:layout_constraintBottom_toBottomOf="@id/barrier_below_information"
                    app:layout_constraintStart_toEndOf="@id/avatar"
                    app:layout_constraintEnd_toEndOf="@id/baseline_end"
                    tools:text="@tools:sample/full_names"
                    style="@style/TextAppearance.AppCompat.Body2"/>

            <android.support.constraint.Barrier
                    android:id="@+id/barrier_below_information"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="avatar,name,role"/>

            <Space
                    android:id="@+id/space_below_information"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/baseline"
                    app:layout_constraintTop_toBottomOf="@id/barrier_below_information"/>

            <!-- TODO Hide each button if it is not used. -->
            <Button
                    android:id="@+id/button_link_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    app:layout_constraintTop_toBottomOf="@id/space_below_information"
                    app:layout_constraintBottom_toBottomOf="@id/baseline_bottom"
                    app:layout_constraintStart_toStartOf="@id/baseline_start"
                    app:layout_constraintEnd_toStartOf="@id/button_link_b"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    tools:text="@tools:sample/lorem"/>

            <Button
                    android:id="@+id/button_link_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    app:layout_constraintTop_toBottomOf="@id/space_below_information"
                    app:layout_constraintBottom_toBottomOf="@id/baseline_bottom"
                    app:layout_constraintStart_toEndOf="@id/button_link_a"
                    app:layout_constraintEnd_toStartOf="@id/button_link_c"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    tools:text="@tools:sample/lorem"/>

            <Button
                    android:id="@+id/button_link_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    app:layout_constraintTop_toBottomOf="@id/space_below_information"
                    app:layout_constraintBottom_toBottomOf="@id/baseline_bottom"
                    app:layout_constraintStart_toEndOf="@id/button_link_b"
                    app:layout_constraintEnd_toEndOf="@id/baseline_end"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    tools:text="@tools:sample/lorem"
                    tools:visibility="visible"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>
