#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

# Download SDK tools.
yes | sdkmanager "tools" | tail
yes | sdkmanager "build-tools;$BUILD_TOOLS" | tail
yes | sdkmanager "platform-tools" | tail
yes | sdkmanager "platforms;android-$ANDROID_SDK" | tail

${DIR}/update-sdk
